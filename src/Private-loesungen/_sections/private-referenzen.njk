{# Private-loesungen/_sections/private-referenzen.njk #}
<section id="ref-gallery-private" class="section reveal" aria-labelledby="ref-title-private">
  <div class="container">
    <h2 id="ref-title-private" class="section-title">Referenzen</h2>
    <p class="section-subtitle center">
      Ein kleiner Auszug realisierter Privat-PV-Anlagen – sauber geplant, montiert und dokumentiert.
    </p>

    <div class="rg" role="region" aria-roledescription="carousel" aria-label="Referenzgalerie (Privat)">
      <button class="rg__nav rg__nav--prev" type="button" aria-label="Zurück">
        <svg width="18" height="18" viewBox="0 0 24 24">
          <path d="M15 18l-6-6 6-6" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="rg__viewport" tabindex="0">
        <ul class="rg__track">
          {# Optional: Reihenfolge/Dateinamen von außen steuerbar #}
          {% set order  = order  or [1,2,3,4,5,6,12,7,8,9,10,11] %}
          {% set base   = base   or '/assets/img/referenzen-privat/' %}
          {% set suffix = suffix or '_P.avif' %}

          {% for i in order %}
            {% set filename = 'anlage' ~ i ~ suffix %}
            <li class="rg__slide">
              <a class="rg__figure" href="{{ base }}{{ filename }}">
                <div class="rg__media">
                  <img
                    src="{{ base }}{{ filename }}"
                    alt="Private Photovoltaik-Referenz {{ i }}"
                    decoding="async" loading="lazy" draggable="false">
                </div>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <button class="rg__nav rg__nav--next" type="button" aria-label="Weiter">
        <svg width="18" height="18" viewBox="0 0 24 24">
          <path d="M9 6l6 6-6 6" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="rg__dots" aria-label="Slides"></div>
    </div>
  </div>
</section>
