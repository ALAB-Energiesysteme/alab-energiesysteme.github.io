<style>
  :root{
    --ft-txt:#0f1115; --ft-muted:#616771; --ft-line:#e7ebf0;
    --ft-card:#ffffff;
    --ft-accent:#E6C23C;           /* ALAB Gold */
    --ft-accent-ink:#1c1400;       /* dunkles Text-Gold */
    --ft-accent-ghost:rgba(230,194,60,.12);
  }

  /* Namespace nur Footer */
  #ftRoot, #ftRoot * { box-sizing:border-box; }
  .ft-alab{ font-family:Montserrat,system-ui,Segoe UI,Roboto,Arial,sans-serif; color:var(--ft-txt); background:transparent; }

  .ft-wrap{
    max-width:1200px; margin:0 auto; padding:40px 16px;
    display:grid; gap:28px; grid-template-columns:1fr;
  }
  @media (min-width:860px){
    .ft-wrap{ grid-template-columns:1.2fr 1fr 1fr 1.2fr; }
  }

  .ft-title{ font-weight:700; font-size:1.05rem; margin:0 0 12px; }
  .ft-col ul{ list-style:none; margin:0; padding:0; }
  .ft-col li{ margin:10px 0; }
  .ft-col a{ color:var(--ft-txt); text-decoration:none; }
  .ft-col a:hover{ text-decoration:underline; }

  /* NAP / Address */
  .ft-address { font-style:normal; color:var(--ft-txt); }
  .ft-address a{ color:inherit; text-decoration:none; }
  .ft-address a:hover{ text-decoration:underline; }
  .ft-brand{ font-weight:800; letter-spacing:.2px; margin-bottom:6px; }

  /* Schnellkontakt-Karte */
  .ft-contact-card{
    display:block; background:var(--ft-card); border:1px solid var(--ft-line);
    border-radius:14px; padding:16px;
  }
  .ft-contact-sub{ color:var(--ft-muted); margin:4px 0 12px; font-size:.95rem; }
  .ft-row{ display:grid; gap:10px; grid-template-columns:1fr 1fr; }
  @media (max-width:560px){ .ft-row{ grid-template-columns:1fr; } }

  .ft-label{ display:block; font-size:.9rem; color:var(--ft-muted); margin:6px 0 4px; }
  .ft-input{
    display:block; width:100%; padding:12px 14px; border-radius:10px;
    border:1px solid var(--ft-line); background:#f7f9fb; font-size:1rem; color:var(--ft-txt);
  }
  .ft-btn{
    border:none; background:var(--ft-accent); color:var(--ft-accent-ink); font-weight:800;
    border-radius:10px; padding:12px 16px; cursor:pointer; min-width:140px;
    transition:transform .06s ease;
  }
  .ft-btn:hover{ transform:translateY(-1px); }
  .ft-btn[aria-busy="true"]{ opacity:.8; cursor:progress; }
  .ft-policy{ display:flex; gap:8px; align-items:flex-start; margin-top:12px; color:var(--ft-muted); font-size:.92rem; }
  .ft-hp{ position:absolute; left:-9999px; width:1px; height:1px; overflow:hidden; } /* Honeypot */

  /* Trenner & Bottom */
  .ft-hr{ height:1px; background:var(--ft-line); margin:20px 0; }
  .ft-copy{ color:var(--ft-muted); font-size:.9rem; }

  .ft-bottom{
    border-top:1px solid var(--ft-line);
    display:flex; flex-direction:column; gap:10px; justify-content:center; align-items:flex-start; padding:14px 16px;
  }
  @media (min-width:560px){
    .ft-bottom{ flex-direction:row; justify-content:space-between; align-items:center; flex-wrap:wrap; }
  }

  .ft-badge{ display:inline-block; padding:3px 8px; border-radius:999px; background:var(--ft-accent-ghost); font-size:.8rem; margin-top:6px; }

  
/* Footer: Schnellkontakt auf Mobil ausblenden */
@media (max-width: 768px){
  /* komplette Spalte verstecken (Titel + Karte) */
  #ftRoot .ft-col:has(.ft-contact-card){
    display: none !important;
  }
}

/* Fallback, falls :has() im Zielbrowser nicht unterstützt wird:
   zumindest die Karte + Checkbox verschwinden lassen */
@media (max-width: 768px){
  #ftRoot .ft-contact-card,
  #ftRoot .ft-contact-card + .ft-policy{
    display: none !important;
  }
}

/* ======================================================
   FOOTER – EXTRA COMPACT MOBILE (<= 768px)
   ====================================================== */
@media (max-width: 768px){
  /* Grundlayout enger */
  #ftRoot .ft-wrap{
    padding: 22px 12px;
    gap: 16px;
    grid-template-columns: 1fr; /* sicherstellen */
  }

  /* Spaltentitel & Listen straffen */
  #ftRoot .ft-title{ font-size: .95rem; margin: 0 0 8px; }
  #ftRoot .ft-col li{ margin: 6px 0; }
  #ftRoot .ft-col a{ line-height: 1.35; }

  /* Adresse/Brand enger */
  #ftRoot .ft-brand{ margin-bottom: 4px; }
  #ftRoot .ft-address{ font-size: .95rem; line-height: 1.45; }

  /* Form-Elemente (falls irgendwo sichtbar) kleiner */
  #ftRoot .ft-label{ font-size: .85rem; margin: 4px 0 3px; }
  #ftRoot .ft-input{ padding: 10px 12px; font-size: .95rem; border-radius: 8px; }
  #ftRoot .ft-row{ gap: 8px; }
  #ftRoot .ft-btn{ padding: 10px 14px; min-width: 120px; border-radius: 8px; font-size: .95rem; }
  #ftRoot .ft-policy{ gap: 6px; margin-top: 8px; font-size: .85rem; }

  /* Trenner & Abstände */
  #ftRoot .ft-hr{ margin: 12px 0; }
  #ftRoot .ft-badge{ font-size: .72rem; padding: 2px 8px; margin-top: 4px; }

  /* Bottom-Bar kompakter */
  #ftRoot .ft-bottom{
    padding: 10px 12px;
    gap: 6px;
  }
  #ftRoot .ft-copy{ font-size: .85rem; }

  /* Sicherheit: keine seitlichen Scrollbars durch Überstände */
  #ftRoot{ overflow-x: clip; }
  @supports not (overflow: clip){
    #ftRoot{ overflow-x: hidden; }
  }
}

/* Ultra-compact phones (<= 480px) – noch etwas straffer */
@media (max-width: 480px){
  #ftRoot .ft-wrap{ padding: 18px 10px; gap: 14px; }
  #ftRoot .ft-title{ font-size: .92rem; }
  #ftRoot .ft-col li{ margin: 5px 0; }
  #ftRoot .ft-input{ padding: 9px 11px; font-size: .92rem; }
  #ftRoot .ft-btn{ padding: 9px 12px; font-size: .9rem; min-width: 108px; }
  #ftRoot .ft-bottom{ padding: 8px 10px; }
  #ftRoot .ft-copy{ font-size: .82rem; }
}

/* (du hast den Schnellkontakt bereits mobil ausgeblendet; das bleibt bestehen) */


</style>
