permalink: /sitemap.xml
eleventyExcludeFromCollections: true
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% set base = site.domain | trim %}

  {% set pages = [
    { url: base ~ '/',                  changefreq: 'weekly',  priority: '0.8' },
    { url: base ~ '/freiflaechen/',     changefreq: 'monthly', priority: '0.8' },
    { url: base ~ '/monitoring/',       changefreq: 'monthly', priority: '0.7' },
    { url: base ~ '/servicepakete/',    changefreq: 'monthly', priority: '0.7' },
    { url: base ~ '/angebot-einholen/', changefreq: 'weekly',  priority: '0.8' },
    { url: base ~ '/kontakt/',          changefreq: 'monthly', priority: '0.7' },
    { url: base ~ '/impressum/',        changefreq: 'yearly',  priority: '0.2' },
    { url: base ~ '/datenschutz/',      changefreq: 'yearly',  priority: '0.2' },
    { url: base ~ '/montage/',          changefreq: 'monthly', priority: '0.8' }
  ] %}

  {% for p in pages %}
  <url>
    <loc>{{ p.url }}</loc>
    <changefreq>{{ p.changefreq }}</changefreq>
    <priority>{{ p.priority }}</priority>
    <lastmod>{{ "now" | isoDate }}</lastmod>
  </url>
  {% endfor %}
</urlset>