<!doctype html>
<html lang="de">
<head>
{% include "analytics/analytics-head.njk" %}

<!-- Favicon & App Icons -->
<link rel="icon" href="/assets/favicons/favicon.ico" sizes="any">
<link rel="icon" type="image/svg+xml" href="/assets/favicons/favicon.svg">
<link rel="apple-touch-icon" href="/assets/favicons/apple-touch-icon.png">
<link rel="manifest" href="/assets/favicons/site.webmanifest">
<link rel="mask-icon" href="/assets/favicons/safari-pinned-tab.svg" color="#E6C23C">
<meta name="theme-color" content="#0A0A0A">

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
<title>{{ title | default('ALAB Energiesysteme') }}</title>
<meta name="description" content="{{ description | default('Ihr Partner für Photovoltaik-Lösungen in Bayern.') }}" />

{% include "meta-seo.njk" %}
{% include "header-styles.njk" %}
{% include "footer-styles.njk" %}

{# Seite-spezifische CSS (nicht render-blockierend) #}
{% if page.css_files %}
  {% for href in page.css_files %}
    <link rel="preload" href="{{ href | url }}" as="style">
    <link rel="stylesheet" href="{{ href | url }}" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="{{ href | url }}"></noscript>
  {% endfor %}
{% endif %}

<!-- Fonts (lokal, non-blocking) -->
<link rel="preload" href="/assets/fonts/montserrat-v31-latin-regular.woff2" as="font" type="font/woff2" crossorigin>
<link rel="preload" href="/assets/fonts/montserrat-v31-latin-600.woff2" as="font" type="font/woff2" crossorigin>
<link rel="stylesheet" href="/assets/css/fonts.css">

<!-- Font Awesome lokal (robust) -->
<link rel="preload" href="/assets/vendor/fontawesome/css/all.min.css" as="style">
<link rel="stylesheet" href="/assets/vendor/fontawesome/css/all.min.css">


{# Header-Umschaltung & Mobile-Header-CSS #}
<link rel="preload" href="/assets/css/header-switch.css" as="style">
<link rel="stylesheet" href="/assets/css/header-switch.css">
<link rel="stylesheet" href="/assets/css/header-mobile.css" media="(max-width:1024px)">

<script>
  // Consent Mode v2 – Default: nur essenziell erlaubt
  window.dataLayer = window.dataLayer || [];
  function gtag(){ dataLayer.push(arguments); }
  gtag('consent', 'default', {
    ad_storage: 'denied',
    analytics_storage: 'denied',
    ad_user_data: 'denied',
    ad_personalization: 'denied',
    functionality_storage: 'granted',
    security_storage: 'granted'
  });
</script>
{# === ENTITY / BRAND JSON-LD (nur auf der Startseite) === #}
{% set isHome = page.url == '/' %}
{% if isHome %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      "@id": "{{ site.url }}/#website",
      "url": "{{ site.url }}/",
      "name": "{{ site.brand.name }}",
      "alternateName": [{% for n in site.brand.short %}"{{ n }}"{% if not loop.last %}, {% endif %}{% endfor %}],
      "publisher": {"@id": "{{ site.url }}/#org"},
      "inLanguage": "de"
    },
    {
      "@type": ["Organization","LocalBusiness","Electrician"],
      "@id": "{{ site.url }}/#org",
      "name": "{{ site.brand.legalName }}",
      "legalName": "{{ site.brand.legalName }}",
      "alternateName": [{% for n in site.brand.short %}"{{ n }}"{% if not loop.last %}, {% endif %}{% endfor %}],
      "url": "{{ site.url }}/",
      "logo": "{{ site.url }}{{ site.logo }}",
      "image": "{{ site.url }}{{ site.logo }}",
      "telephone": "{{ site.contact.phone }}",
      "email": "{{ site.contact.email }}",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "{{ site.address.street }}",
        "postalCode": "{{ site.address.postalCode }}",
        "addressLocality": "{{ site.address.city }}",
        "addressCountry": "{{ site.address.country }}"
      },
      "areaServed": "Bayern",
      "sameAs": [{% for s in site.sameAs %}"{{ s }}"{% if not loop.last %}, {% endif %}{% endfor %}]
    }
  ]
}
</script>
{% endif %}
{# === /ENTITY JSON-LD === #}

</head>

<body class="{{ bodyClass }}">
  <div id="header-desktop">
    {% include "header.njk" %}
  </div>

  {% include "header-mobile.njk" %}

  <main id="content" role="main" class="{{ pageClass }}">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}
  {% include "footer-scripts.njk" %}

  {# Seite-spezifisches JS (defer) #}
  {% if page.js_files %}
    {% for src in page.js_files %}
      <script src="{{ src | url }}" defer></script>
    {% endfor %}
  {% endif %}

  {# Nur laden, wenn explizit angefordert #}
  {% if use_servicepakete_js %}
    <script src="/assets/js/servicepakete.js" defer></script>
  {% endif %}

  {# Mobile-Header-JS nur auf schmalen Viewports #}
  <script type="module">
    if (window.matchMedia && window.matchMedia('(max-width:1024px)').matches) {
      import('/assets/js/header-mobile.js');
    }
  </script>

  {% include "cookie-consent.njk" %}
  {% include "analytics/analytics-body.njk" %}
</body>
</html>
