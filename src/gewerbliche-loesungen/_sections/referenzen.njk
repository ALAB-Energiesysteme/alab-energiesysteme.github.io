<section id="ref-gallery" class="section reveal" aria-labelledby="ref-title">
  <div class="container">
    <h2 id="ref-title" class="section-title">Referenzen</h2>
    <p class="section-subtitle center">
      Ein kleiner Auszug betreuter Anlagen – sauber installiert, überwacht und dokumentiert.
    </p>

    <div class="rg" role="region" aria-roledescription="carousel" aria-label="Referenzgalerie">
      <button class="rg__nav rg__nav--prev" type="button" aria-label="Zurück">
        <svg width="18" height="18" viewBox="0 0 24 24">
          <path d="M15 18l-6-6 6-6" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="rg__viewport" tabindex="0">
        <ul class="rg__track">
          {# >>> Bildliste statisch wie auf der Montageseite, nur anderer Ordner/Dateinamen #}
          {% set pics = [10,2,3,4,5,6,7,8,9,1] %}
          {% for i in pics %}
            <li class="rg__slide">
              <a class="rg__figure" href="/assets/img/referenzen-gewerbe/anlage{{ i }}_G.avif">
                <div class="rg__media">
                  <img
                    src="/assets/img/referenzen-gewerbe/anlage{{ i }}_G.avif"
                    alt="Gewerbliche Photovoltaik-Referenz {{ i }}"
                    decoding="async" loading="lazy" draggable="false">
                </div>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <button class="rg__nav rg__nav--next" type="button" aria-label="Weiter">
        <svg width="18" height="18" viewBox="0 0 24 24">
          <path d="M9 6l6 6-6 6" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="rg__dots" aria-label="Slides"></div>
    </div>
  </div>
</section>
